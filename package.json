{
  "name": "billboard_tracker_app",
  "version": "2.0.0",
  "description": "Billboard Tracker Application",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore './Billboard/client/*'\" \"npm run client\" ",
    "client": "cd ./Billboard/client && npm run start",
    "install": "cd ./Billboard/client && npm install",
    "build": "cd ./Billboard/client && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dp95000/group-project-3.git"
  },
